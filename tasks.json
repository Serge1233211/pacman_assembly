{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (NASM)",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "nasm",
            "args": [
                "-f", "elf64",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run (ld)",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "ld",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-T",
                "x86_64",
                "-melf_i386"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}